{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "/scripts/*": ["./web/scripts/*"],
      "/images/*": ["./web/images/*"],
      "/styles/*": ["./web/styles/*"],
      "/public/*": ["./web/public/*"]
    }
  },
  "include": [
    "web/scripts/**/*",
    "web/public/**/*",
    "tools/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "work"
  ]
}
