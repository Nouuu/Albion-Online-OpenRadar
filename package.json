{
  "name": "albion-openradar",
  "version": "1.2.0",
  "description": "OpenRadar - Real-time radar for Albion Online",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon --config config/nodemon.json app.js",
    "check": "node scripts-shell/check-system.js",
    "check:runtime": "node server-scripts/Utils/runtime-check.js",
    "prebuild": "npm run check",
    "esbuild": "node scripts-shell/build-esbuild.js",
    "build": "npm run esbuild && pkg . --compress GZip --no-bytecode --public-packages \"*\" --public",
    "build:win": "npm run esbuild && pkg . --targets node24-win-x64 --compress GZip --output dist/OpenRadar.exe --no-bytecode --public-packages \"*\" --public",
    "build:linux": "npm run esbuild && pkg . --targets node24-linux-x64 --compress GZip --output dist/OpenRadar-linux --no-bytecode --public-packages \"*\" --public",
    "build:macos": "npm run esbuild && pkg . --targets node24-macos-x64 --compress GZip --output dist/OpenRadar-macos --no-bytecode --public-packages \"*\" --public",
    "build:all": "npm run esbuild && pkg-fetch && pkg . --targets node24-win-x64,node24-linux-x64,node24-macos-x64 --compress GZip --no-bytecode --public-packages \"*\" --public",
    "postbuild": "node scripts-shell/post-build.js",
    "rebuild:native": "npm rebuild cap",
    "install:deps": "npm install && npm run rebuild:native",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "bin": "app.cjs",
  "pkg": {
    "assets": [
      "node_modules/cap/build/**/*"
    ],
    "targets": [
      "node24-win-x64",
      "node24-linux-x64",
      "node24-macos-x64"
    ],
    "outputPath": "dist"
  },
  "author": "Nospy",
  "license": "ISC",
  "type": "module",
  "engines": {
    "node": ">=24.11.1",
    "npm": ">=11.6.2"
  },
  "dependencies": {
    "buffercursor": "^0.0.12",
    "cap": "^0.2.1",
    "ejs": "^3.1.10",
    "express": "^5.2.1",
    "nan": "^2.23.0",
    "node-gyp": "^11.5.0",
    "readline-sync": "^1.4.10",
    "winreg": "^1.2.5",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/express": "^5.0.6",
    "@types/node": "^24.10.1",
    "@yao-pkg/pkg": "^6.11.0",
    "archiver": "^7.0.1",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "nodemon": "^3.1.11",
    "puppeteer": "^24.31.0",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "puppeteer-real-browser": "^1.4.4",
    "sharp": "^0.33.5",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
