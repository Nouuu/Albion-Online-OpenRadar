{{define "layouts/sidebar.gohtml"}}
<aside
    id="desktop-sidebar"
    onmouseenter="window.sidebar.onEnter()"
    onmouseleave="window.sidebar.onLeave()"
    class="hidden md:flex flex-col z-20 flex-shrink-0 overflow-y-auto bg-base-200 border-r border-base-content/[0.03] sidebar-transition"
    style="width: 16rem;">

    <div class="flex items-center justify-between p-4 border-b border-base-content/[0.03]">
        <a href="/" class="flex items-center gap-3 sidebar-expanded-only">
            <img src="/images/icon.png" alt="OpenRadar" class="w-10 h-10 rounded-lg">
            <span class="text-xl font-bold text-base-content">OpenRadar</span>
        </a>
        <div class="flex flex-col items-center gap-2 w-full sidebar-collapsed-only">
            <img src="/images/icon.png" alt="OpenRadar" class="w-10 h-10 rounded-lg">
            <button onclick="window.sidebar.toggle()"
                class="p-1.5 rounded-lg text-base-content/60 hover:text-base-content hover:bg-base-300 transition-colors"
                title="Expand sidebar">
                <i data-lucide="panel-left-open" class="w-4 h-4"></i>
            </button>
        </div>
        <button onclick="window.sidebar.toggle()"
            class="p-2 rounded-lg text-base-content/60 hover:text-base-content hover:bg-base-300 transition-colors sidebar-expanded-only"
            title="Collapse sidebar">
            <i data-lucide="panel-left-close" class="w-5 h-5"></i>
        </button>
    </div>

    <nav id="desktop-nav" class="flex-1 p-3 space-y-0.5">
        {{range .NavItems}}
        <a href="{{.Path}}"
           hx-get="{{.Path}}" hx-target="#page-content" hx-swap="innerHTML transition:true"
           hx-push-url="true"
           class="flex items-center gap-3 px-3 py-2.5 rounded-md transition-colors
                  {{if .Active}}text-primary border-l-2 border-primary -ml-px pl-2.5{{else}}text-base-content/60 hover:text-base-content/80 hover:bg-base-content/[0.02]{{end}}">
            <i data-lucide="{{.Icon}}" class="w-[18px] h-[18px] flex-shrink-0" stroke-width="1.5"></i>
            <span class="text-sm sidebar-expanded-only">{{.Label}}</span>
        </a>
        {{end}}
    </nav>

    <div class="p-4 border-t border-base-content/[0.03] sidebar-expanded-only">
        <p class="text-xs text-base-content/50 font-mono">v{{.Version}}</p>
    </div>
</aside>

<aside id="mobile-sidebar"
    class="mobile-sidebar fixed inset-y-0 left-0 z-40 w-64 bg-base-200 border-r border-base-content/[0.03] md:hidden">

    <div class="flex items-center justify-between p-4 border-b border-base-content/[0.03]">
        <a href="/" class="flex items-center gap-3">
            <img src="/images/icon.png" alt="OpenRadar" class="w-10 h-10 rounded-lg">
            <span class="text-xl font-bold text-base-content">OpenRadar</span>
        </a>
        <button onclick="window.sidebar.closeMobile()"
            class="p-2 rounded-lg text-base-content/60 hover:text-base-content hover:bg-base-300 transition-colors">
            <i data-lucide="x" class="w-5 h-5"></i>
        </button>
    </div>

    <nav id="mobile-nav" class="p-3 space-y-0.5">
        {{range .NavItems}}
        <a href="{{.Path}}"
           hx-get="{{.Path}}" hx-target="#page-content" hx-swap="innerHTML transition:true"
           hx-push-url="true"
           onclick="window.sidebar.closeMobile()"
           class="flex items-center gap-3 px-3 py-2.5 rounded-md transition-colors
                  {{if .Active}}text-primary border-l-2 border-primary -ml-px pl-2.5{{else}}text-base-content/60 hover:text-base-content/80 hover:bg-base-content/[0.02]{{end}}">
            <i data-lucide="{{.Icon}}" class="w-[18px] h-[18px]" stroke-width="1.5"></i>
            <span class="text-sm">{{.Label}}</span>
        </a>
        {{end}}
    </nav>

    <div class="absolute bottom-0 left-0 right-0 p-4 border-t border-base-content/[0.03]">
        <p class="text-xs text-base-content/50 font-mono">v{{.Version}}</p>
    </div>
</aside>
{{end}}
